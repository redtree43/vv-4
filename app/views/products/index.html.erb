<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Product type</th>
      <th>Year of manufacture</th>
      <th>Price</th>
      <th>Colour</th>
      <th>Material</th>
      <th>Size standardised</th>
      <th>Brand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.product_type %></td>
        <td><%= product.year_of_manufacture %></td>
        <td><%= product.price %></td>
        <td><%= product.colour %></td>
        <td><%= product.material %></td>
        <td><%= product.size_standardised %></td>
        <td><%= product.brand %></td>
        <%= link_to product_path(product) do %>
        <td><%= image_tag product.image_url(:medium) %></td>
        <% end %>

        <%# <td><%= product.photo_2</td> %>
        <td><%= link_to 'Show', product %></td>

      </tr>
    <% end %>
  </tbody>
</table>

