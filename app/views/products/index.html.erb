<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Product type</th>
      <th>Year of manufacture</th>
      <th>Price</th>
      <th>Colour</th>
      <th>Material</th>
      <th>Size on product</th>
      <th>Size standardised</th>
      <th>Brand</th>
      <th>Photo 1</th>
      <th>Photo 2</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.user_id %></td>
        <td><%= product.product_type %></td>
        <td><%= product.year_of_manufacture %></td>
        <td><%= product.price %></td>
        <td><%= product.colour %></td>
        <td><%= product.material %></td>
        <td><%= product.size_on_product %></td>
        <td><%= product.size_standardised %></td>
        <td><%= product.brand %></td>
        <td><%= image_tag product.image_url(:medium) %></td>
        <%# <td><%= product.photo_2</td> %>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

